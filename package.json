  "main": "./index",
  "description": "Cylon module for Digispark",
  "homepage": "http://cylonjs.com",
  "bugs": "https://github.com/hybridgroup/cylon-digispark/issues",

  "author": "The Hybrid Group <cylonjs@hybridgroup.com>",

  "repository": {
